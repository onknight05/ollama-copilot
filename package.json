{
  "name": "ollama-copilot-vscode",
  "displayName": "Ollama Copilot VS Code",
  "description": "Ollama Copilot: Harness the power of Ollama with autocomplete and chat without leaving VS Code",
  "icon": "resources/ollama.png",
  "version": "1.0.0",
  "publisher": "namdang",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/onknight05/ollama-copilot/issues"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/onknight05/ollama-copilot"
  },
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Programming Languages",
    "Machine Learning",
    "Other"
  ],
  "keywords": [
    "vscode",
    "ollama",
    "copilot",
    "gpt",
    "ai",
    "llm",
    "autocomplete",
    "chat",
    "code completion",
    "coding"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "ollama.openChat",
        "title": "Ollama Copilot: Open Chat",
        "icon": {
          "light": "resources/icon.svg",
          "dark": "resources/icon.svg"
        }
      },
      {
        "command": "ollama.showMenu",
        "title": "Ollama Copilot: Show Menu"
      },
      {
        "command": "ollama.toggleAutocomplete",
        "title": "Ollama Copilot: Toggle Autocomplete"
      },
      {
        "command": "ollama.enableAutocomplete",
        "title": "Ollama Copilot: Enable Completions"
      },
      {
        "command": "ollama.disableAutocomplete",
        "title": "Ollama Copilot: Disable Completions"
      },
      {
        "command": "ollama.refreshModels",
        "title": "Ollama Copilot: Refresh Models"
      }
    ],
    "submenus": [
      {
        "id": "ollama.statusBarMenu",
        "label": "Ollama Copilot"
      }
    ],
    "menus": {
      "editor/title": [
        {
          "command": "ollama.openChat",
          "group": "navigation",
          "when": "editorFocus"
        }
      ],
      "ollama.statusBarMenu": [
        {
          "command": "ollama.enableAutocomplete",
          "group": "1_status",
          "when": "!config.ollama-copilot.autocompleteEnabled"
        },
        {
          "command": "ollama.disableAutocomplete",
          "group": "1_status",
          "when": "config.ollama-copilot.autocompleteEnabled"
        },
        {
          "command": "ollama.openChat",
          "group": "2_actions"
        }
      ]
    },
    "configuration": {
      "title": "Ollama Copilot",
      "properties": {
        "ollama-copilot.baseUrl": {
          "type": "string",
          "default": "http://localhost:11434",
          "description": "Ollama API base URL"
        },
        "ollama-copilot.model": {
          "type": "string",
          "default": "codellama",
          "description": "Ollama model to use for code completion"
        },
        "ollama-copilot.chatModel": {
          "type": "string",
          "default": "codellama",
          "description": "Ollama model to use for chat"
        },
        "ollama-copilot.autocompleteEnabled": {
          "type": "boolean",
          "default": true,
          "description": "Enable/disable autocomplete suggestions"
        },
        "ollama-copilot.maxTokens": {
          "type": "number",
          "default": 100,
          "description": "Maximum number of tokens for code completion"
        },
        "ollama-copilot.temperature": {
          "type": "number",
          "default": 0.4,
          "description": "Temperature for code generation (0.0-1.0)"
        },
        "ollama-copilot.debounceMs": {
          "type": "number",
          "default": 300,
          "description": "Debounce delay in milliseconds before triggering autocomplete"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "lint": "eslint src --ext ts",
    "pretest": "npm run compile && npm run lint",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/node": "^18.0.0",
    "@types/vscode": "^1.70.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^9.39.2",
    "typescript": "^5.9.3",
    "@types/mocha": "^10.0.10",
    "typescript-eslint": "^8.52.0",
    "@vscode/test-cli": "^0.0.12",
    "@vscode/test-electron": "^2.5.2"
  },
  "dependencies": {
    "axios": "^1.12.0"
  }
}
